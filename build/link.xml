<?xml version="1.0" encoding="UTF-8"?>
<project name="Project Install" default="link-main">
	<target name="link-main">
		<echo>Start configure project</echo>

		<phing phingfile="${build.dir.root}/targets/link.xml" target="before"
			haltonfailure="true"></phing>

		<!-- Make configs for modules -->
		<taskdef name="liblink" classname="phing.tasks.ext.LibLinkTask" />
		<liblink config="${build.config.filename.xml}" />

		<phing phingfile="${build.dir.root}/targets/link.xml" target="after"
			haltonfailure="true"></phing>

		<echo>Finish configure project</echo>
	</target>

</project>